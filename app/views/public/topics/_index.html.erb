<div class="container" style="background-color: #EFEFEF;">
  <div class="row justify-content-center">
    <div class="col-3 mr-4">
      <div class="" style="width: 250px; height: 203px; position: relative;">
        <%= image_tag 'wood.png', size: "250x250", class: "img-fluid" %>
        <div class="overlay-text" style="position: absolute; top: 55%; left: 50%; transform: translate(-50%, -50%); color: white; text-shadow: 2px 2px 4px #000;">
          ダイエット一覧
        </div>
      </div>
    </div>


    <div class="col-md-8 justify-content-center mt-5 ml-5">

      <%= form_with model: @topic, url: topics_path, local: true do |f| %>
        <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>

        <%= f.text_area :body, placeholder: "本文",  class: "form-control" %>
        <div class="text-right mt-2">
          <%= f.submit '投稿', class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>

  </div>

  <h2 class="text-center mt-3 py-2"><i class="fa-solid fa-dumbbell", style="transform: rotate(30deg);"></i> 掲示板 <i class="fa-solid fa-pencil"></i></h2>
  <div class="row justify-content-center my-4">
    <div class="col-10" style="background-color: white;">
      <% @topics.each do |topic| %>
        <div class="row px-1 py-3 border-bottom border-secondary bg-light">
          <div class="col-md-1 text-center">
            <%= image_tag topic.user.get_profile_image(60, 60), style: "border-radius: 20px; width: 60px;" %>
            @<%= topic.user.last_name %><%= topic.user.first_name %>
          </div>
          <div class="col-md-10">
            <%= link_to topic_path(topic), style: "color: black;" do %>
              <h5><b><%= topic.title %></b></h5>
            <% end %>
            <p><%= topic.body %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


