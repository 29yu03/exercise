<div class="container">
  <!-- コミュニティ名と承認待ち一覧のタイトル -->
  <h2 class="text-center"><%= @community.name %></h2>
  <h4 class="text-center">承認待ち一覧</h4>

  <!-- 承認待ちユーザーのリスト -->
  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
      <% if @permits.present? %>
        <div class="table-responsive">
          <table class="table table-hover text-nowrap bg-light">
            <thead class="thead-dark">
              <tr>
                <th>名前</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @permits.each do |permit| %>
                <tr>
                  <!-- ユーザー名へのリンク -->
                  <td>
                    <%= link_to permit.user.full_name, user_path(permit.user), class: "text-dark" %>
                  </td>
                  <!-- 加入許可ボタン -->
                  <td class="text-right">
                    <%= link_to '加入許可', community_group_users_path(@community, permit_id: permit.id), method: :post, class: "btn btn-sm btn-success" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <!-- 承認待ちユーザーがいない場合のメッセージ -->
        <p class="text-center">承認待ちユーザーはいません。</p>
      <% end %>
    </div>
  </div>

  <!-- 戻るリンク -->
  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
      <p class="text-center">
        <%= link_to "戻る", community_path(@community), class: 'text-dark font-weight-bold' %>
      </p>
    </div>
  </div>

</div>
