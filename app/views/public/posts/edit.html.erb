<div class="container" style="background-color: #EFEFEF;">
  <h3 class="text-center pt-4">編集画面</h3>
  <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>

    <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
    <h4>タイトル</h4>
    <%= f.text_field :title, class: "form-control" %>
    <h4>サブタイトル</h4>
    <%= f.text_field :subtitle, class: "form-control" %>
    <h4>本文</h4>
    <%= f.text_area :body, class: "form-control", rows: 12 %>
    <div class="text-center">
      <%= f.submit '編集を保存する', class: "btn btn-info mt-4" %>
    </div>
  <% end %>
</div>

