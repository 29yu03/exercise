<h1>編集画面</h1>
<%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>

  <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <%= f.text_field :subtitle %>
  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

<% end %>

