<div class="row m-5">
  <!-- 投稿ユーザー情報 -->
  <div class="col-3">
    <div class="row">
      <div class="col-12 bg-white shadow" style="border-radius: 15px; height: 350px;">
        <div class="col pt-3 d-flex justify-content-center mb-3 mb-lg-0">
          <%= image_tag @post.user.get_profile_image(250, 250), style: "border-radius: 150px; width: 150px;" %>
        </div>
        <div class="text-center w-100">
          <%= @post.user.last_name %><%= @post.user.first_name %><br>
          <p><%= @post.user.introduction %></p>
        </div>
      </div>
    </div>
    <div class="row p-4">
      <%= link_to "一覧画面へ", admin_posts_path, class: "btn btn-outline-info" %>
      <%= link_to "編集する", edit_admin_post_path(@post), class: "btn btn-warning mx-2" %>
      <%= link_to "削除", admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
    </div>
  </div>

  <!-- 投稿内容 -->
  <div class="col">
    <div class="row">
      <div class="col mx-3">
        <% if @post.image.attached? %>
          <%= image_tag @post.image.variant(resize_to_fit: [600, nil]).processed, alt: "Post Image" %><br>
          <% @post.tags.each do |tag| %>
            <div class="label"><%= tag.name %></div>
          <% end %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: "card-img-top", size: "300x300", alt: "No Image" %>
        <% end %>
      </div>
    </div>

    <div class="row px-3">
      <div class="col-12">
        <h2 class="pb-4"><b><%= @post.title %></b></h2>
        <h5><%= @post.subtitle %></h5>

        <div class="border-top border-secondary mt-5">
          <p><%= simple_format(@post.body) %></p>
        </div>
      </div>
    </div>
  </div>
</div>
