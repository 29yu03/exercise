<div class="container", style="background-color: #EFEFEF;">
<h1>Edit User</h1>

<%= form_with(model: [:admin, @user], local: true) do |f| %>
<div class="d-flex justify-content-center pb-5">
  <div>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.get_profile_image(170,170), width: 150, height: 150, style: "border-radius: 10px;", id: "current_profile_image" %>
  <% else %>
    <%= image_tag 'no_image.jpg', width: 170, height: 170, style: "border-radius: 10px;", id: "current_profile_image" %>
  <% end %>


    <%= f.label :profile_image %>
    <%= f.file_field :profile_image %>
  </div>
  </div>
  <div style="width: 70%;">
  <table class="w-100 mx-5">
    <tbody>
      <tr>
        <td class="col-3"><%= f.label :introduction %></td>
        <td><%= f.text_field :introduction, class: "form-control" %></td>
      </tr>

      <tr>
        <td class="col-3"><%= f.label :email %></td>
        <td><%= f.text_field :email, class: "form-control" %></td>
      </tr>

      <tr>
        <td class="col-3"><%= f.label :last_name %></td>
        <td><%= f.text_field :last_name, class: "form-control" %></td>
      </tr>

      <tr>
        <td class="col-3"><%= f.label :first_name %></td>
        <td><%= f.text_field :first_name, class: "form-control" %></td>
      </tr>

      <tr>
        <td class="col-3"><%= f.label :password %></td>
        <td><%= f.password_field :password, class: "form-control" %></td>
      </tr>

      <tr>
        <td class="col-3"><%= f.label :password_confirmation %></td>
        <td><%= f.password_field :password_confirmation, class: "form-control" %></td>
      </tr>
    </tbody>
  </table>
  <div class="text-center mt-4"><%= f.submit 'Update User' %></div>

  </div>
<% end %>
</div>


